{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "vchome-hospital-desktop",
  "version": "1.0.0",
  "identifier": "io.moradok.vchomehospital",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173/",
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build --mode tauri"
  },
  "app": {
    "windows": [
      {
        "title": "VCHome Hospital",
        "width": 1100,
        "height": 720,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: asset:; img-src 'self' data: blob: https: tauri: asset:; script-src 'self' tauri:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://api.line.me; media-src 'self' blob:; worker-src 'self' blob:; frame-ancestors 'self'; base-uri 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
