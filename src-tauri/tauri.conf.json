{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "vchome-hospital-desktop",
  "version": "0.1.0",
  "identifier": "io.moradok.vchomehospital",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173/",
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build --mode tauri"
  },
  "app": {
    "windows": [
      {
        "title": "vchome-hospital-desktop",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"], 
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
